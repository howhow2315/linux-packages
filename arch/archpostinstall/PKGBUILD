pkgname=archpostinstall
pkgver=1.0.3
pkgrel=1
pkgdesc="Interactive post-Arch Linux setup script for firewall, EDNS, IME, SSH, power management, and system tweaks"
arch=('any')
url="https://github.com/howhow2315/linux-packages"
license=('MIT')
depends=('bash' 'base-devel' 'sudo' 'reflector' 'systemd' 'git')
source=("archpostinstall.sh")
