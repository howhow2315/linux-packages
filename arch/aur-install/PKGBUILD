pkgname=aur-install
pkgver=1.0.0
pkgrel=1
pkgdesc="Command-line tool to easily make packages from https://aur.archlinux.org/package.git"
arch=('any')
url="https://github.com/howhow2315/linux-packages"
license=('MIT')
depends=('bash' 'base-devel' 'git')
source=("aur-install.sh")
md5sums=('SKIP')  # change to real checksum later if desired

package() {
  install -Dm755 aur-install.sh "$pkgdir/usr/bin/aur-install"
}