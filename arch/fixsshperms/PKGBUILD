pkgname=fixsshperms
pkgver=1.0.2
pkgrel=1
pkgdesc="Quickly fixes permissions in .ssh"
arch=('any')
url="https://github.com/howhow2315/linux-packages"
license=('MIT')
depends=('bash' 'howhow-common' 'openssh')
source=("fixsshperms.sh")
sha256sums=('433e73b2ead42d8cc822536cfa1fcdeb5ed13164f87e86481b9d8c4c3fd8188b')

package() {
    install -Dm755 fixsshperms.sh "$pkgdir/usr/bin/fixsshperms"
}
