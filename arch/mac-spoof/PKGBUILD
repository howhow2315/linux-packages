pkgname=mac-spoof
pkgver=1.0.1
pkgrel=1
pkgdesc="Command-line tool to toggle MAC Spoofing"
arch=('any')
url="https://github.com/howhow2315/linux-packages"
license=('MIT')
depends=('bash' 'networkmanager')
source=("mac-spoof.sh")
md5sums=('caece1ab5664d220a6a6dba5a40f2748')

package() {
  install -Dm755 mac-spoof.sh "$pkgdir/usr/bin/mac-spoof"
}
