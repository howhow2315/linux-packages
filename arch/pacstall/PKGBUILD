pkgname=pacstall
pkgver=1.0.2
pkgrel=3
pkgdesc="A simple pacman wrapper for shorthand inside scripts and basic usage"
arch=('any')
url="https://github.com/howhow2315/linux-packages"
license=('MIT')
depends=('bash' 'pacman')
source=("pacstall.sh")
sha256sums=('0ce110a4ee367a7baa6f8dc4d41a2a01900c19e44978c0e1bc4522b0e368548b')

package() {
  install -Dm755 pacstall.sh "$pkgdir/usr/bin/pacstall"
}
