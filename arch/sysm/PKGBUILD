pkgname=sysm
pkgver=1.1.1
pkgrel=1
pkgdesc="Arch Linux system maintenance script"
arch=('any')
url="https://github.com/howhow2315/linux-packages"
license=('MIT')
depends=('systemd' 'pacman' 'reflector' 'coreutils' 'findutils' 'pacman-contrib')
optdepends=(
  'yay: AUR helper for updating AUR packages'
  'paru: Alternative AUR helper'
)
source=('sysm.sh')
sha256sums=('1d7f43d5637a7bb6b09615c80e1646ab48493206caf766e40b225ab25047dc8e')

package() {
  install -Dm755 sysm.sh "$pkgdir/usr/bin/sysm"
}
