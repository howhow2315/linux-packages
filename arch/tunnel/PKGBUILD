pkgname=tunnel
pkgver=1.0.0
pkgrel=1
pkgdesc="Simple OpenSSH tunnel wrapper"
arch=('any')
url="https://github.com/howhow2315/linux-packages"
license=('MIT')
depends=('openssh')
optdepends=(
  'autossh: Allows optional usage of autossh via -a|--autossh'
)
source=('tunnel.sh')
sha256sums=('5e8ea7c8f364e913a18f73b3f15e568dc1639ef1fa30f4d66cc5e349c386dd21')

package() {
  install -Dm755 tunnel.sh "$pkgdir/usr/bin/tunnel"
}
